<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_stock_move_wizard_form" model="ir.ui.view">
        <field name="name">stock.move.wizard.form</field>
        <field name="model">stock.move.wizard</field>
        <field name="arch" type="xml">
            <form string="Criar Movimento de Estoque">
                <group>
                    <field name="product_id"/>
                    <field name="product_qty"/>
                    <field name="maquina_registro_id"/>
                </group>
                <footer>
                    <button string="Criar Movimento" type="object" name="action_create_stock_move" class="oe_highlight"/>
                    <button string="Cancelar" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_move_wizard" model="ir.actions.act_window">
        <field name="name">Criar Movimento de Estoque</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.move.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
