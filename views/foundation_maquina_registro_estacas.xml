<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View for Foundation Maquina Registro -->
        <record id="view_foundation_maquina_registro_estacas_tree" model="ir.ui.view">
            <field name="name">foundation.maquina.registro.estacas.tree</field>
            <field name="model">foundation.maquina.registro</field>
            <field name="arch" type="xml">
                <tree string="Foundation Maquina Registro List">
                    <field name="sale_order_id"/>
                    <field name="service_id" invisible="1"/>
                    <field name="maquina_id"/>
                    <field name="nome_obra"/>
                </tree>
            </field>
            <field name="priority">2</field>
        </record>

        <!-- Form View for Foundation Maquina Registro with estacas -->
        <record id="view_foundation_maquina_registro_estacas_form" model="ir.ui.view">
            <field name="name">foundation.maquina.registro.estacas.form</field>
            <field name="model">foundation.maquina.registro</field>
            <field name="arch" type="xml">
                <form string="Registro de M치quina com Estacas">
                    <sheet>
                        <group>
                            <field name="maquina_id" invisible="1"/>
                            <field name="nome_obra" readonly="1"/>
                            <field name="sale_order_id" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Estacas">
                                <field name="estacas_ids" context="{'default_foundation_maquina_registro_id': active_id, 'default_sale_order_id': sale_order_id}">
                                    <form>
                                        <sheet>
                                            <group>
                                                <field name="nome_estaca"/>
                                                <field name="profundidade"/>
                                                <field name="data"/>
                                                <field name="observacao"/>
                                                <field name="sale_order_id" invisible="1"/>
                                                <field name="foundation_obra_service_id" invisible="1"/>
                                                <field name="sale_order_line_id"
                                                       domain="[('order_id', '=', sale_order_id), ('product_id.product_tmpl_id', '=', foundation_obra_service_id)]"
                                                       context="{'default_order_id': sale_order_id, 'form_view_ref':'sale.view_order_product_form'}"
                                                       options="{'no_create': True, 'no_open': True}"/>
                                                <field name="signature" widget="signature"/>
                                                <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image', 'size': [500, 500]}"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- Action to open the Tree View of Foundation Maquina Registro -->
        <record id="action_foundation_maquina_registro_estacas_tree" model="ir.actions.act_window">
            <field name="name">Visualizar Registros de M치quina</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">foundation.maquina.registro</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_foundation_maquina_registro_estacas_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Visualize todos os registros de m치quinas aqui.
                </p>
            </field>
        </record>

        <!-- Action to open the Form View of Foundation Maquina Registro -->
        <record id="action_foundation_maquina_registro_estacas_form" model="ir.actions.act_window">
            <field name="name">Detalhes do Registro de M치quina</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">foundation.maquina.registro</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_foundation_maquina_registro_estacas_form"/>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
    </data>
</odoo>
