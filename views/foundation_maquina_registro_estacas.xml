<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- CRIAR RELATORIO DE ESTACAS -->
        <!-- A TELA DE RELATORIOS TAMBEM ABRE ESSE FORMULARIO -->
        <!-- Form View for Foundation Obra Service -->
                <!-- Form View for inserting Estacas into Relatórios, including service details -->
        <record id="view_FODASE" model="ir.ui.view">
            <field name="name">FODASE</field>
            <field name="model">foundation.relatorios</field>
            <field name="arch" type="xml">
                <form string="Relatório de Estacas">

                    <header>
                        <field name="data" invisible="1"/>
                        <button name="action_confirm" type="object" string="Confirmar" class="oe_highlight"
                                attrs="{'invisible': [('state', 'in', ['conferido', 'cancelado'])]}"
                                help="Confirma o relatório, marcando-o como conferido."/>
                        <button name="action_draft" type="object" string="Rascunho"
                                attrs="{'invisible': [('state', '=', 'rascunho')]}"
                                help="Retorna o relatório para o estado de rascunho."/>
                        <button name="action_cancel" type="object" string="Cancelar"
                                attrs="{'invisible': [('state', '=', 'cancelado')]}"
                                help="Cancela o relatório."/>
                        <field name="state" widget="statusbar" statusbar_visible="rascunho,conferencia,em_analise,conferido,cancelado"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="data" readonly="1"/>
                            <field name="foundation_maquina_registro_id" widget="many2one" options="{'no_open': True}" invisible="1"/>
                            <field name="nome_obra" related="foundation_maquina_registro_id.nome_obra" readonly="1"/>
                            <field name="nome_servico" related="foundation_maquina_registro_id.service_name" readonly="1"/>
                            <field name="endereco_obra" related="foundation_maquina_registro_id.endereco" readonly="1"/>
                            <field name="maquina_id" related="foundation_maquina_registro_id.maquina_id" readonly="1"/>
                            <field name="sale_order_id"/>
                            <field name="service_template_id" related="foundation_maquina_registro_id.service_template_id"/>
                        </group>
                        <notebook>
                            <page string="Estacas">
                                <field name="estacas_ids" context="{'default_foundation_maquina_registro_id': foundation_maquina_registro_id, 'default_sale_order_id': sale_order_id, 'default_service_template_id': service_template_id}">
                                    <tree editable="bottom">
                                        <field name="nome_estaca" readonly="1"/>
                                        <field name="nome_estaca" readonly="1"/>
                                        <field name="service_template_id" readonly="1"/>
                                        <field name="sale_order_id" readonly="1"/>
                                        <field name="profundidade" readonly="1"/>

                                        <field name="sale_order_line_id" domain="[('order_id', '=', sale_order_id), ('product_id.product_tmpl_id', '=', service_template_id)]" options="{'no_create': False, 'no_open': True}"/>
                                        <field name="foundation_maquina_registro_id" widget="many2one" options="{'no_open': True}" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="nome_estaca" readonly="1"/>
                                            <field name="profundidade" readonly="1"/>
                                            <field name="sale_order_id" readonly="1"/>
                                            <field name="service_template_id" readonly="1"/>
                                            <field name="sale_order_line_id" domain="[('order_id', '=', sale_order_id), ('product_id.product_tmpl_id', '=', service_template_id)]" options="{'no_create': False, 'no_open': True}"/>
                                            <field name="foundation_maquina_registro_id" widget="many2one" options="{'no_open': True}" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <field name="assinatura" widget="signature" readonly="1"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- FOUNDATION  MAQUINA REGISTRO ESTACAS-->
        <!-- Action to open the new Relatório Form -->
        <record id="action_open_foundation_relatorio_maquina_form" model="ir.actions.act_window">
            <field name="name">Criar Relatório de Produção</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">foundation.relatorios</field>

            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                  (0, 0, {'view_mode': 'form', 'view_id': ref('view_foundation_relatorio_maquina_form')})]"/>
        </record>



        <record id="view_foundation_maquina_registro_tree" model="ir.ui.view">
            <field name="name">foundation.maquina.registro.tree</field>
            <field name="model">foundation.maquina.registro</field>
            <field name="arch" type="xml">
                <tree string="Lista de Registros de Máquinas">
                    <field name="sale_order_id"/>
                    <field name="nome_obra"/>
                    <field name="analytic_account_id"/>
                    <field name="requer_chamada_maquina" invisible="1"/>
                    <field name="display_has_today_chamada"
                   decoration-success="display_has_today_chamada == 'Sim'"
                   decoration-danger="display_has_today_chamada == 'Não'"
                    widget="badge" optional="show"/>
                    <field name="has_today_chamada" invisible="1"/>
                    <field name="maquina_id"/>
                    <field name="service_id"/>
                    <field name="service_template_id" invisible="1"/>
                    <field name="endereco"/>
                    <button name="%(action_open_foundation_relatorio_maquina_form)d" type="action"
                            string="Adicionar Relatório" icon="fa-plus-square"
                            context="{
                                    'default_foundation_maquina_registro_id': active_id,
                                    'default_service_template_id': service_template_id,
                                    'default_sale_order_id': sale_order_id
                                }" attrs="{'invisible': [('requer_chamada_maquina', '=', True),('has_today_chamada', '=', False)]}"/>
                    <!-- attrs="{'invisible': [('requer_chamada_maquina', '!=', False)]}"-->
                    <!--  'default_maquina_id': maquina_id,
                     'default_foundation_maquina_registro_id': id,
                     /-->
                </tree>
            </field>
        </record>


         <!-- FOUNDATION  MAQUINA REGISTRO ESTACAS-->
        <record id="action_foundation_maquina_registro_tree" model="ir.actions.act_window">
            <field name="name">Criar Relatorio</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">foundation.maquina.registro</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_foundation_maquina_registro_tree"/>
            <field name="context">{"create": False}</field> <!-- sumir o botao de new-->
            <field name="help" type="html">

                <p class="o_view_nocontent_smiling_face">
                    Crie um novo Relatório de Produção
                </p>
            </field>
        </record>

    </data>
</odoo>

