<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View for Foundation Estacas -->
        <record id="view_foundation_estacas_tree" model="ir.ui.view">
            <field name="name">foundation.estacas.tree</field>
            <field name="model">foundation.estacas</field>
            <field name="arch" type="xml">
                <tree string="Foundation Estacas List">
                    <field name="data"/>
                    <field name="nome_estaca"/>
                    <field name="service_template_id"/>
                    <field name="medicao_id"/>
                    <field name="profundidade"/>
                    <field name="unit_price"/>
                    <field name="total_price" readonly="1"/>
                    <field name="observacao"/>
                    <field name="sale_order_id" readonly="1"/>
                    <field name="sale_order_line_id"/>
                </tree>
            </field>
        </record>

        <record id="view_foundation_estacas_calendar" model="ir.ui.view">
            <field name="name">foundation.estacas.calendar</field>
            <field name="model">foundation.estacas</field>
            <field name="arch" type="xml">
                <calendar string="Calendar View for Estacas" date_start="data" color="medicao_id">
                    <field name="nome_estaca"/>
                    <field name="profundidade"/>
                    <field name="unit_price"/>
                    <field name="total_price"/>
                    <field name="service_template_id"/>
                    <field name="medicao_id"/>
                    <field name="observacao"/>
                    <field name="sale_order_line_id"/>
                    <field name="nome_maquina"/>
                    <field name="nome_operador"/>
                    <field name="nome_obra"/>
                </calendar>
            </field>
        </record>

        <record id="view_foundation_estacas_graph" model="ir.ui.view">
            <field name="name">foundation.estacas.graph</field>
            <field name="model">foundation.estacas</field>
            <field name="arch" type="xml">
                <graph string="Graph View for Estacas" type="bar">
                    <field name="medicao_id" type="row"/>
                    <field name="total_price" type="measure"/>
                    <field name="profundidade" type="measure"/>
                </graph>
            </field>
        </record>'



        <!-- Form View for Foundation Estacas -->
        <record id="view_foundation_estacas_form" model="ir.ui.view">
            <field name="name">foundation.estacas.form</field>
            <field name="model">foundation.estacas</field>
            <field name="arch" type="xml">
                <form string="Estaca Detalhes">
                    <sheet>
                        <group>
                            <field name="nome_estaca"/>
                            <field name="diametro"/>
                            <field name="profundidade"/>
                            <field name="data"/>
                            <field name="observacao"/>
                            <field name="medicao_id"/>
                            <field name="service_template_id"/>
                            <field name="sale_order_id"/>
                            <field name="sale_order_line_id"/>
                            <field name="unit_price"/>
                            <field name="total_price"/>
                            <field name="signature" widget="signature" readonly="1"/>
                            <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image','size': [500, 500]}" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Form View for Foundation Medicao -->
        <record id="view_foundation_medicao_form" model="ir.ui.view">
            <field name="name">foundation.medicao.form</field>
            <field name="model">foundation.medicao</field>
            <field name="arch" type="xml">
                <form string="Foundation Medicao">
                    <header>
                        <button name="action_create_invoice"
                                string="Faturar"
                                type="object"
                                class="oe_highlight"/>
                        <field name="nome" widget="statusbar" statusbar_visible="aguardando,emissao"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="nome" readonly="1"/>
                            <field name="data" readonly="1"/>
                            <field name="situacao"/>
                            <field name="sale_order_id"/>
                            <field name="valor_total"/>
                            <field name="invoice_id"/>
                            <!-- field name="invoice_id"/-->
                        </group>
                        <notebook>
                            <page string="Estacas">
                                <field name="estacas_ids" readonly="1">
                                    <tree editable="false">
                                        <field name="nome_estaca" readonly="1"/>
                                        <field name="profundidade" readonly="1"/>
                                        <field name="unit_price" readonly="1"/>
                                        <field name="sale_order_line_id" readonly="1"/>
                                        <!-- field name="invoice_id"/-->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Kanban View for Foundation Medicao -->
        <record id="view_foundation_medicao_kanban" model="ir.ui.view">
            <field name="name">foundation.medicao.kanban</field>
            <field name="model">foundation.medicao</field>
            <field name="arch" type="xml">
                <kanban default_group_by="situacao" class="o_kanban_small_column">
                    <field name="nome"/>
                    <field name="situacao"/>
                    <field name="data"/>
                    <field name="valor_total"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong><field name="nome"/></strong>
                                    <div><field name="data"/></div>
                                    <div><span class="oe_currency_value">$</span><field name="valor_total"/></div>
                                    <div class="text-muted">
                                        Situação: <field name="situacao"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <!-- Tree View for Foundation Maquina -->
        <record id="view_foundation_maquina_tree" model="ir.ui.view">
            <field name="name">foundation.maquina.tree</field>
            <field name="model">foundation.maquina</field>
            <field name="arch" type="xml">
                <tree string="Foundation Maquina List">
                    <field name="nome_maquina"/>
                    <field name="operador"/>
                    <field name="observacao"/>
                </tree>
            </field>
        </record>

        <!-- Form View for Foundation Maquina -->
        <record id="view_foundation_maquina_form" model="ir.ui.view">
            <field name="name">foundation.maquina.form</field>
            <field name="model">foundation.maquina</field>
            <field name="arch" type="xml">
                <form string="Foundation Maquina">
                    <sheet>
                        <group>
                            <field name="nome_maquina"/>
                            <field name="operador"/>
                            <field name="observacao"/>
                        </group>
                    </sheet>
                    <!-- Inserir Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View for Foundation Medicao -->
        <record id="view_foundation_medicao_tree" model="ir.ui.view">
            <field name="name">foundation.medicao.tree</field>
            <field name="model">foundation.medicao</field>
            <field name="arch" type="xml">
                <tree string="Foundation Medicao List">
                    <header>
                        <button string="Kanban View" type="action" name="%(action_foundation_medicao)d" icon="fa-th-large"/>
                        <!-- button string="Faturar" type="object" name="action_create_invoice" icon="fa-money"/ -->

                    </header>
                    <field name="sale_order_id"/>
                    <field name="data"/>
                    <field name="nome"/>
                    <field name="situacao"/>
                    <field name="valor_total"/>
                    <field name="invoice_id"/>

                </tree>
            </field>
        </record>



        <!-- Tree View for Foundation Obra -->
        <record id="view_foundation_obra_tree" model="ir.ui.view">
            <field name="name">foundation.obra.tree</field>
            <field name="model">foundation.obra</field>
            <field name="arch" type="xml">
                <tree string="Foundation Obra List">
                    <field name="sale_order_id"/>
                    <field name="nome_obra"/>
                    <field name="cliente_id"/>
                    <field name="valor_total"/>
                    <field name="currency_id"/>
                </tree>
            </field>
        </record>

        <!-- Form View for Foundation Obra -->
        <record id="view_foundation_obra_form" model="ir.ui.view">
            <field name="name">foundation.obra.form</field>
            <field name="model">foundation.obra</field>
            <field name="arch" type="xml">
                <form string="Foundation Obra">
                    <sheet>
                        <group>
                            <field name="sale_order_id" readonly="1"/>
                            <field name="nome_obra"/>
                            <field name="cliente_id" readonly="1"/>
                            <field name="valor_total" readonly="1"/>
                            <field name="currency_id" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View for Foundation Obra Service -->
        <record id="view_foundation_obra_service_tree" model="ir.ui.view">
            <field name="name">foundation.obra.service.tree</field>
            <field name="model">foundation.obra.service</field>
            <field name="arch" type="xml">
                <tree string="Foundation Obra Service List">
                    <field name="sale_order_id"/>
                    <field name="service_name"/>
                    <field name="nome_obra"/>
                    <field name="endereco"/>
                    <field name="operador_id"/>
                </tree>
            </field>
        </record>

        <!-- Form View for Foundation Obra Service -->
        <record id="view_foundation_obra_service_form" model="ir.ui.view">
            <field name="name">foundation.obra.service.form</field>
            <field name="model">foundation.obra.service</field>
            <field name="arch" type="xml">
                <form string="Foundation Obra Service">
                    <sheet>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="service_name"/>
                            <field name="nome_obra"/>
                            <field name="foundation_maquina_id"/>
                            <field name="endereco"/>
                            <field name="operador_id"/>
                        </group>
                    </sheet>
                    <!-- Inserir Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- Tree View for Foundation Obra Service -->
        <record id="view_foundation_obra_service_tree" model="ir.ui.view">
            <field name="name">foundation.obra.service.tree</field>
            <field name="model">foundation.obra.service</field>
            <field name="arch" type="xml">
                <tree string="Foundation Obra Service List">
                    <field name="sale_order_id"/>
                    <field name="service_name"/>
                    <field name="nome_obra"/>
                    <field name="foundation_maquina_id"/>
                    <field name="endereco"/>
                    <field name="operador_id"/>

                </tree>
            </field>
        </record>
        <!-- Tree View for foundation  obra service with estacas -->
        <record id="view_foundation_obra_service_with_estacas_form" model="ir.ui.view">
            <field name="name">foundation.obra.service.with.estacas.form</field>
            <field name="model">foundation.obra.service</field>
            <field name="arch" type="xml">
                <form string="Serviço na Obra com Estacas">
                    <sheet>
                        <group>
                            <field name="variante_id" invisible="1"/>
                            <field name="nome_obra" readonly="1"/>
                            <field name="sale_order_id" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Estacas">
                                <field name="estacas_ids" context="{'default_foundation_obra_service_id': active_id, 'default_sale_order_id': sale_order_id}">
                                    <form>
                                        <sheet>
                                            <group>
                                                <field name="nome_estaca"/>
                                                <field name="diametro"/>
                                                <field name="profundidade"/>
                                                <field name="data"/>
                                                <field name="observacao"/>
                                                <field name="sale_order_id" invisible="1"/>
                                                <field name="service_template_id" invisible="1"/>
                                                <field name="sale_order_line_id"
                                                       domain="[('order_id', '=', sale_order_id), ('product_id.product_tmpl_id', '=', service_template_id)]"
                                                       context="{'default_order_id': sale_order_id, 'form_view_ref':'sale.view_order_product_form'}"
                                                       options="{'no_create': True, 'no_open': True}"/>
                                                <field name="signature" widget="signature"/>
                                                <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image', 'size': [500, 500]}"/>
                                                <!-- field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image', 'size': [90, 90]}"/-->
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
