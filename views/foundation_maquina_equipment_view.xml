<odoo>
    <data>


        <!-- Formulário de Máquinas -->
        <record id="view_foundation_maquina_equipment_form" model="ir.ui.view">
            <field name="name">foundation.maquina.equipment.form</field>
            <field name="model">foundation.maquina</field>
            <field name="arch" type="xml">
                <form string="Cadastro de Máquinas">
                    <sheet>
                        <group>
                            <field name="nome_maquina"/>
                            <field name="status_maquina"/>
                            <field name="operador_id"/>
                            <field name="observacao"/>
                            <field name="available_employee_ids" invisible="1"/>
                            <field name="department_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <!-- Kanban View para Equipamentos -->
        <record id="view_maquina_equipment_kanban" model="ir.ui.view">
            <field name="name">maquina.equipment.kanban</field>
            <field name="model">maintenance.equipment</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="department_id"/>
                    <field name="maquina_id"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div class="o_kanban_record">
                                <div class="o_kanban_primary_bottom">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_secondary_bottom">
                                        <field name="category_id" widget="badge"/>
                                        <field name="department_id" widget="badge"/>
                                        <field name="maquina_id" widget="badge"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Lista de Equipamentos -->
        <record id="view_maquina_equipment_tree" model="ir.ui.view">
            <field name="name">maintenance.equipment.maquina.tree</field>
            <field name="model">maintenance.equipment</field>
            <field name="arch" type="xml">
                <tree string="Lista de Equipamentos">
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="department_id"/>
                    <field name="maquina_id"/>
                </tree>
            </field>
        </record>

        <!-- Formulário de Equipamentos -->
        <record id="view_maquina_equipment_form" model="ir.ui.view">
            <field name="name">maintenance.equipment.form</field>
            <field name="model">maintenance.equipment</field>
            <field name="arch" type="xml">
                <form string="Cadastro de Equipamentos">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="category_id"/>
                            <field name="department_id"/>
                            <field name="maquina_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
               <!-- Lista de Máquinas -->
        <record id="view_foundation_maquina_equipment_tree" model="ir.ui.view">
            <field name="name">foundation.maquina.equipment.tree</field>
            <field name="model">foundation.maquina</field>
            <field name="arch" type="xml">
                <tree string="Lista de Máquinas">
                    <field name="nome_maquina"/>
                    <field name="status_maquina"/>
                    <field name="operador_id"/>

                    <field name="department_id"/>
                    <button name="action_view_maquina_equipments" string="Ver Equipamentos"
                            type="object" class="oe_highlight"/>
                </tree>
            </field>
        </record>

        <!-- Ação para Ver Máquinas -->
        <record id="action_foundation_maquina_equipment" model="ir.actions.act_window">
            <field name="name">Máquinas</field>
            <field name="res_model">foundation.maquina</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                  (0, 0, {'view_mode': 'tree', 'view_id': ref('view_foundation_maquina_equipment_tree')}),
                                  (0, 0, {'view_mode': 'form', 'view_id': ref('view_foundation_maquina_equipment_form')})]"/>
        </record>


        <!-- Ação para Equipamentos -->
        <record id="action_maintenance_equipment" model="ir.actions.act_window">
            <field name="name">Equipamentos</field>
            <field name="res_model">maintenance.equipment</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                  (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_maquina_equipment_kanban')}),
                                  (0, 0, {'view_mode': 'tree', 'view_id': ref('view_maquina_equipment_tree')}),
                                  (0, 0, {'view_mode': 'form', 'view_id': ref('view_maquina_equipment_form')})]"/>
        </record>

    </data>
</odoo>
