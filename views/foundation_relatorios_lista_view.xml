<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form View for Foundation Obra Service -->
        <!-- Tree View for Foundation Obra Service -->
        <record id="view_foundation_relatorios_lista_tree" model="ir.ui.view">
            <field name="name">foundation.relatorios.lista.tree</field>
            <field name="model">foundation.relatorios</field>
            <field name="arch" type="xml">
                <tree string="Lista de relatorios">
                    <field name="data"/>
                    <field name="foundation_obra_service_id"/>
                    <field name="nome_maquina"/>
                    <field name="nome_operador"/>
                    <field name="nome_obra"/>
                    <field name="sale_order_id"/>
                </tree>
            </field>
        </record>


        <!-- Form View for Foundation Obra Service -->
                <!-- Form View for inserting Estacas into Relatórios, including service details -->
        <record id="view_foundation_relatorios_lista_form" model="ir.ui.view">
            <field name="name">foundation.relatorios.lista.form</field>
            <field name="model">foundation.relatorios</field>
            <field name="arch" type="xml">
                <form string="Relatório de Estacas">
                    <sheet>
                        <group>
                            <field name="data"/>
                            <field name="foundation_obra_service_id" widget="many2one" options="{'no_open': True}" invisible="1"/>
                            <field name="nome_obra" related="foundation_obra_service_id.nome_obra" readonly="1"/>
                            <field name="nome_servico" related="foundation_obra_service_id.service_name" readonly="1"/>
                            <field name="endereco_obra" related="foundation_obra_service_id.endereco" readonly="1"/>
                            <field name="sale_order_id"/>
                            <field name="service_template_id" related="foundation_obra_service_id.service_template_id"/>
                        </group>
                        <notebook>
                            <page string="Estacas">
                                <field name="estacas_ids" context="{'default_foundation_obra_service_id': foundation_obra_service_id, 'default_sale_order_id': sale_order_id, 'default_service_template_id': service_template_id}">
                                    <tree editable="bottom">
                                        <field name="nome_estaca"/>
                                        <field name="service_template_id"/>
                                        <field name="sale_order_id"/>
                                        <field name="profundidade"/>
                                        <field name="sale_order_line_id" domain="[('order_id', '=', sale_order_id), ('product_id.product_tmpl_id', '=', service_template_id)]" options="{'no_create': True, 'no_open': True}"/>
                                        <field name="foundation_obra_service_id" widget="many2one" options="{'no_open': True}" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="nome_estaca"/>
                                            <field name="profundidade"/>
                                            <field name="observacao"/>
                                            <field name="sale_order_id"/>
                                            <field name="service_template_id"/>
                                            <field name="sale_order_line_id" domain="[('order_id', '=', sale_order_id), ('product_id.product_tmpl_id', '=', service_template_id)]" options="{'no_create': True, 'no_open': True}"/>
                                            <field name="foundation_obra_service_id" widget="many2one" options="{'no_open': True}" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <field name="assinatura" widget="signature"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
                <!-- Action to open the new Relatório Form -->
        <record id="action_open_foundation_relatorios_lista_form" model="ir.actions.act_window">
            <field name="name">Relatorio</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">foundation.relatorios</field>
            <field name="view_id" ref="view_foundation_relatorios_lista_form"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>
        <record id="action_foundation_relatorios_lista_tree" model="ir.actions.act_window">
            <field name="name">Relatorios</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">foundation.relatorios</field>
            <field name="views" eval="[(ref('view_foundation_relatorios_lista_tree'), 'tree'), (ref('view_foundation_relatorios_lista_form'), 'form')]"/>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crie um novo Serviço de Fundação
                </p>
            </field>
        </record>


    </data>
</odoo>