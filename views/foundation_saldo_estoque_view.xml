<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Action to view stock.quant items for a specific sale order's location -->
        <!-- Tree View para Sale Order -->
        <record id="view_sale_order_saldo_tree" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date_order"/>
                    <field name="specific_stock_location_id"/>

                    <field name="state"/>
                    <button name="%(action_stock_quant_kanban)d"
                            type="action"
                            string="Ver Produtos no Estoque"
                            context="{'specific_stock_location_id': specific_stock_location_id}"/>
                </tree>
            </field>
        </record>

        <!-- Kanban View para Stock Quant -->
        <record id="view_foundation_stock_quant_kanban" model="ir.ui.view">
            <field name="name">stock.quant.kanban</field>
            <field name="model">stock.quant</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div>
                                <strong><field name="product_id"/></strong>
                                <p>Qty: <field name="quantity"/></p>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Ação para abrir a vista Kanban de Stock Quant -->
        <record id="action_stock_quant_kanban" model="ir.actions.act_window">
            <field name="name">Product Stock</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.quant</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_foundation_stock_quant_kanban"/>
            <field name="domain">[('location_id', '=', context.get('specific_stock_location_id'))]</field>
        </record>

                <!-- Ação para abrir a vista em árvore de Sale Order -->
        <record id="action_sale_order_saldo_tree" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_sale_order_saldo_tree"/>
        </record>

    </data>
</odoo>
