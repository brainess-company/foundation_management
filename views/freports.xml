<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Paper Format Definition (Ensure this ID is unique and correct) -->
        <record id="paperformat_euro_small" model="report.paperformat">
            <field name="name">European Small</field>
            <field name="default" eval="True"/>
            <field name="format">A5</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">40</field>
            <field name="margin_left">30</field>
            <field name="margin_right">30</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>



        <!-- QWeb Template for the Medição Report -->
        <template id="medicao_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <h2>Relatório de Medição: <span t-esc="doc.nome"/></h2>
                            <p>Data: <span t-esc="doc.data"/></p>
                            <p>Total Valor: <span t-esc="doc.valor_total" t-esc-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/></p>

                            <h3>Estacas Relacionadas:</h3>
                            <table style="width:100%;">
                                <tr>
                                    <th>Nome da Estaca</th>
                                    <th>Profundidade (m)</th>
                                    <th>Preço Unitário</th>
                                    <th>Preço Total</th>
                                </tr>
                                <t t-foreach="doc.estacas_ids" t-as="estaca">
                                    <tr>
                                        <td><span t-esc="estaca.nome_estaca"/></td>
                                        <td><span t-esc="estaca.profundidade"/></td>
                                        <td><span t-esc="estaca.unit_price" t-esc-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/></td>
                                        <td><span t-esc="estaca.total_price" t-esc-options='{"widget": "monetary", "display_currency": "doc.currency_id"}'/></td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        <!-- Report Definition -->
        <report
                id="medicao_report"
                model="foundation.medicao"
                string="Imprimir Medição"
                report_type="qweb-pdf"
                name="medicao_report_template"
                file="medicao_report_template"
                paperformat="paperformat_euro_small"/>
    </data>
</odoo>
