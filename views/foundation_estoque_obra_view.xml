<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
                <!-- Action to view stock.quant items for a specific sale order's location -->
        <record id="action_view_stock_quant_for_sale_order" model="ir.actions.act_window">
            <field name="name">Itens de Estoque</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.quant</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('location_id', '=', context.get('location_id'))]</field>
            <field name="context">{'search_default_location_id': context.get('location_id')}</field>
        </record>
        <!-- Tree View for Foundation Obra Service -->
        <record id="view_foundation_obra_service_estoque_tree" model="ir.ui.view">
            <field name="name">foundation.obra.service.estoque.tree</field>
            <field name="model">foundation.obra.service</field>
            <field name="arch" type="xml">
                <tree string="Foundation Obra Service List Simples">
                    <field name="sale_order_id"/>
                    <field name="specific_stock_location_id"/>
                    <field name="service_name"/>
                    <field name="nome_obra"/>
                    <field name="endereco"/>
                    <!-- Botão para visualizar itens de estoque -->
                    <button name="%(action_view_stock_quant_for_sale_order)d" type="action"
                            string="Ver Itens de Estoque"
                            context="{'location_id': specific_stock_location_id}"
                            icon="fa-eye"/>
                </tree>
            </field>
        </record>


        <!-- Form View for Foundation Obra Service -->
        <record id="view_foundation_obra_service_estoque_form" model="ir.ui.view">
            <field name="name">foundation.obra.service.estoque.form</field>
            <field name="model">foundation.obra.service</field>
            <field name="arch" type="xml">
                <form string="Foundation Obra Service Simples">
                    <sheet>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="specific_stock_location_id"/>
                            <field name="service_name"/>
                            <field name="nome_obra"/>
                            <field name="endereco"/>
                            <field name="foundation_maquina_ids" widget="many2many_tags"
                                   string="Máquinas Associadas"/>
                        </group>
                    </sheet>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>



        <!-- Action to open the tree or form view -->
        <record id="action_foundation_obra_service_estoque" model="ir.actions.act_window">
            <field name="name">Foundation Obra Service Estoque</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">foundation.obra.service</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"create": False}</field>
            <field name="help" type="html">
                <p>Acompanhe os itens que temos em estoque na obra.</p>
            </field>
            <field name="view_ids" eval="[(5, 0, 0),
                                  (0, 0, {'view_mode': 'tree', 'view_id': ref('view_foundation_obra_service_estoque_tree')}),
                                  (0, 0, {'view_mode': 'form', 'view_id': ref('view_foundation_obra_service_estoque_form')})]"/>
        </record>



    </data>
</odoo>
