<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <record id="view_chamada_maquina_obra_form" model="ir.ui.view">
        <field name="name">foundation.chamada.form</field>
        <field name="model">foundation.chamada</field>
        <field name="arch" type="xml">
            <form string="Registro de Chamada">
                <sheet>
                    <group>
                        <field name="data"/>
                        <field name="foundation_maquina_obra_id" widget="many2one" options="{'no_open': True}"/>
                        <field name="nome_obra" readonly="1"/>
                        <field name="maquina_id"/>
                        <field name="obra_id"/>
                        <field name="sale_order_id"/>
                        <field name="funcionario_ids" invisible="1"/>
                        <field name="active" invisible="1"/>

                        <field name="operador_id"/>
                        <field name="endereco" readonly="1"/>
                        <field name="foundation_maquina_registro_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Funcionários Presentes">
                            <field name="lista_presenca_ids" context="{'default_maquina_id': maquina_id, 'already_added_ids': funcionario_ids}">
                                <tree editable="bottom">
                                    <field name="funcionario_id"
                                           widget="many2one"
                                           options="{'no_open': True}"
                                           domain="[('id', 'not in', context.get('already_added_ids', [])), ('machine_id', '=', maquina_id)]"/>
                                    <field name="maquina_id"/>
                                    <field name="data"/>
                                </tree>

                                <form>
                                    <group>
                                        <field name="funcionario_id"
                                               widget="many2one"
                                               options="{'no_open': True}"
                                               domain="[('machine_id', '=', context.get('default_maquina_id', False)),
                                               ('id', 'not in', parent.funcionario_ids)]" />
                                        <field name="maquina_id"/>
                                        <field name="data"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Salvar" type="object" name="action_save" class="oe_highlight"/>
                        <button string="Cancelar" class="oe_link" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

        <!-- FOUNDATION CHAMADA MAQUINA REGISTRO -->
        <!-- Ação para abrir o Formulário de Chamada com dados pré-preenchidos -->
        <record id="action_open_chamada_obra_form" model="ir.actions.act_window">
            <field name="name">Registrar Chamada</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">foundation.chamada</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_chamada_maquina_obra_form"/>
            <field name="context">{
                'default_nome_obra': context.get('default_nome_obra', ''),
                'default_maquina_id': context.get('default_maquina_id', ''),
                'default_obra_id': context.get('default_obra_id', ''),
                'default_sale_order_id': context.get('default_sale_order_id', ''),
                'default_operador_id': context.get('default_operador_id', '')
            }</field>
        </record>


        <!-- Tree View for Foundation Maquina Registro   -->
        <record id="view_foundation_maquina_obra_chamada_tree" model="ir.ui.view">
            <field name="name">foundation.maquina.obra.tree</field>
            <field name="model">foundation.maquina.obra</field>
            <field name="arch" type="xml">
                <tree string="Lista de Registros de Máquinas" delete="false">
                    <field name="maquina_id"/>
                    <field name="obra_id"/>
                    <field name="operador_id"/>
                    <field name="sale_order_id"/>
                    <field name="has_today_chamada" invisible="1"/>
                    <field name="requer_chamada_maquina" invisible="1"/>
                    <field name="nome_obra"/>
                    <field name="display_has_today_chamada"
                   decoration-success="display_has_today_chamada == 'Sim'"
                   decoration-danger="display_has_today_chamada == 'Não'"
                    widget="badge" optional="show"/>  <!-- se eu remover widget e opcianal apenas texto muda a cor -->
                    <button name="%(action_open_chamada_obra_form)d" type="action"
                            string="Registrar Chamada" icon="fa-calendar"
                            context="{
                                'default_obra_id': obra_id,
                                'default_nome_obra': nome_obra,
                                'default_maquina_id': maquina_id,
                                'default_sale_order_id': sale_order_id,
                                'default_operador_id': operador_id,
                                'default_foundation_maquina_obra_id': id
                            }"  attrs="{'invisible': ['|', ('requer_chamada_maquina', '=', False), ('has_today_chamada', '=', True)]}"/>


                </tree>
            </field>
        </record>


        <!-- Ação para abrir a visão em árvore -->
        <record id="action_open_foundation_maquina_obra_chamada_tree" model="ir.actions.act_window">
            <field name="name">Registros de Máquinas obra</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">foundation.maquina.obra</field>
            <field name="view_mode">tree</field>
            <field name="context">{"create": False}</field>
            <field name="view_id" ref="view_foundation_maquina_obra_chamada_tree"/>
            <field name="help" type="html">
                <p>Você pode registrar novas chamadas usando o botão na lista.</p>
            </field>
        </record>
    </data>
</odoo>
