<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- action_foundation_relatorio_completo_tree -->
        <record id="view_foundation_obra_service_with_estacas_tree" model="ir.ui.view">
            <field name="name">foundation.obra.service.with.estacas.tree</field>
            <field name="model">foundation.obra.service</field>
            <field name="arch" type="xml">
                <tree string="Foundation Obra Service List">
                    <field name="sale_order_id"/>
                    <field name="service_template_id" invisible="1"/>
                    <field name="service_name"/>
                    <field name="nome_obra"/>
                    <!--field name="foundation_maquina_id"/-->
                    <!--field name="endereco"/-->
                    <!--field name="operador_id"/-->
                </tree>
            </field>
            <field name="priority">2</field>
        </record>

        <!-- Tree View for foundation  obra service with estacas -->
        <record id="view_foundation_obra_service_with_estacas_form" model="ir.ui.view">
            <field name="name">foundation.obra.service.with.estacas.form</field>
            <field name="model">foundation.obra.service</field>
            <field name="arch" type="xml">
                <form string="Serviço na Obra com Estacas b">
                    <sheet>
                        <group>
                            <field name="variante_id" invisible="1"/>
                            <field name="nome_obra" readonly="1"/>
                            <field name="sale_order_id" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Estacas">
                                <field name="estacas_ids" context="{'default_foundation_obra_service_id': active_id, 'default_sale_order_id': sale_order_id}">
                                    <form>
                                        <sheet>
                                            <group>
                                                <field name="nome_estaca"/>
                                                <field name="profundidade"/>
                                                <field name="data"/>
                                                <field name="observacao"/>
                                                <field name="sale_order_id" invisible="1"/>
                                                <field name="service_template_id" invisible="1"/>
                                                <field name="sale_order_line_id"
                                                       domain="[('order_id', '=', sale_order_id), ('product_id.product_tmpl_id', '=', service_template_id)]"
                                                       context="{'default_order_id': sale_order_id, 'form_view_ref':'sale.view_order_product_form'}"
                                                       options="{'no_create': True, 'no_open': True}"/>
                                                <field name="signature" widget="signature"/>
                                                <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image', 'size': [500, 500]}"/>
                                                <!-- field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image', 'size': [90, 90]}"/-->
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- Action to open the view with estacas -->
        <record id="action_foundation_obra_service_with_estacas" model="ir.actions.act_window">
            <field name="name">Serviços na Obra com Estacas Funcionando</field>
            <field name="res_model">foundation.obra.service</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                                           (0, 0, {'view_mode': 'tree', 'view_id': ref('tiago_fundacao.view_foundation_obra_service_with_estacas_tree')}),
                                           (0, 0, {'view_mode': 'form', 'view_id': ref('tiago_fundacao.view_foundation_obra_service_with_estacas_form')})]"/>
        </record>

    </data>
</odoo>